@name: "远程兼容关键字测试示例"
@description: "演示如何使用远程兼容的自定义关键字"

# 测试文件操作关键字
[打印], 内容: "=== 测试远程兼容文件操作 ==="

# 写入文件
写入结果 = [远程兼容文件操作], 操作类型: "write", 文件路径: "test_remote.txt", 文件内容: "这是远程兼容测试文件"
[打印], 内容: "文件写入结果: ${写入结果}"
[断言], 条件: "${写入结果['success']} == True"

# 检查文件是否存在
存在检查 = [远程兼容文件操作], 操作类型: "exists", 文件路径: "test_remote.txt"
[打印], 内容: "文件存在检查: ${存在检查}"
[断言], 条件: "${存在检查['exists']} == True"

# 读取文件
读取结果 = [远程兼容文件操作], 操作类型: "read", 文件路径: "test_remote.txt"
[打印], 内容: "文件读取结果: ${读取结果}"
[断言], 条件: "${读取结果['success']} == True"
[断言], 条件: "${读取结果['content']} == '这是远程兼容测试文件'"

# 删除文件
删除结果 = [远程兼容文件操作], 操作类型: "delete", 文件路径: "test_remote.txt"
[打印], 内容: "文件删除结果: ${删除结果}"
[断言], 条件: "${删除结果['success']} == True"

# 测试数据处理关键字
[打印], 内容: "=== 测试远程兼容数据处理 ==="

# 格式化数据
测试数据 = "Hello World"
格式化结果 = [远程兼容数据处理], 数据: ${测试数据}, 处理类型: "format", 处理参数: {"template": "处理后的数据: {data}"}
[打印], 内容: "数据格式化结果: ${格式化结果}"
[断言], 条件: "${格式化结果['success']} == True"

# 验证数据
验证参数 = {
    "rules": {
        "not_empty": {},
        "type_check": {"type": "str"},
        "length_check": {"min": 5, "max": 20}
    }
}
验证结果 = [远程兼容数据处理], 数据: ${测试数据}, 处理类型: "validate", 处理参数: ${验证参数}
[打印], 内容: "数据验证结果: ${验证结果}"
[断言], 条件: "${验证结果['validation_passed']} == True"

# 转换数据
转换结果 = [远程兼容数据处理], 数据: ${测试数据}, 处理类型: "transform", 处理参数: {"type": "upper"}
[打印], 内容: "数据转换结果: ${转换结果}"
[断言], 条件: "${转换结果['transformed_data']} == 'HELLO WORLD'"

# 测试调试模式
调试结果 = [远程兼容数据处理], 数据: ${测试数据}, 处理类型: "format", 处理参数: {"template": "调试: {data}"}, 调试模式: True
[打印], 内容: "调试模式结果: ${调试结果}"
[断言], 条件: "${调试结果['debug_info']} != null"

# 测试HTTP请求关键字（使用公共API）
[打印], 内容: "=== 测试远程兼容HTTP请求 ==="

# 发送GET请求
HTTP结果 = [远程兼容HTTP请求], 请求地址: "https://httpbin.org/get", 请求方法: "GET"
[打印], 内容: "HTTP GET请求结果状态: ${HTTP结果['status_code']}"
[断言], 条件: "${HTTP结果['success']} == True"
[断言], 条件: "${HTTP结果['status_code']} == 200"

# 发送POST请求
POST数据 = {"test_key": "test_value", "message": "远程兼容测试"}
POST结果 = [远程兼容HTTP请求], 
    请求地址: "https://httpbin.org/post", 
    请求方法: "POST", 
    请求头: {"Content-Type": "application/json"}, 
    请求数据: ${POST数据}
[打印], 内容: "HTTP POST请求结果状态: ${POST结果['status_code']}"
[断言], 条件: "${POST结果['success']} == True"
[断言], 条件: "${POST结果['status_code']} == 200"

# 测试错误处理
[打印], 内容: "=== 测试错误处理 ==="

# 测试不存在的文件读取
错误读取 = [远程兼容文件操作], 操作类型: "read", 文件路径: "不存在的文件.txt"
[打印], 内容: "错误读取结果: ${错误读取}"
[断言], 条件: "${错误读取['success']} == False"

# 测试不支持的操作
错误操作 = [远程兼容文件操作], 操作类型: "invalid_operation", 文件路径: "test.txt"
[打印], 内容: "错误操作结果: ${错误操作}"
[断言], 条件: "${错误操作['success']} == False"

# 测试无效的HTTP请求
错误HTTP = [远程兼容HTTP请求], 请求地址: "http://不存在的域名.com", 超时时间: 5
[打印], 内容: "错误HTTP请求结果: ${错误HTTP}"
[断言], 条件: "${错误HTTP['success']} == False"

[打印], 内容: "=== 远程兼容关键字测试完成 ==="
