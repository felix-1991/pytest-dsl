@name: 用户注册测试
@description: 验证用户注册功能
@tags: [register, smoke]

# 生成随机用户名
username = 'test_user_123'
email = 'test123@example.com'

# 设置基础URL
base_url = 'https://api.example.com'

# 设置默认请求头
headers = '{"Content-Type": "application/json", "Accept": "application/json"}'

# 注册请求
[API接口调用],方法:POST,URL:'${base_url}/register',请求头:${headers},请求参数:'{"username": "${username}", "email": "${email}", "password": "123456"}',响应参数:'{"code": 200, "message": "success"}'

@teardown do
[打印内容],内容: '清理注册测试数据'
[API接口调用],方法:DELETE,URL:'${base_url}/users/${username}',请求头:${headers},请求参数:'{}',响应参数:'{"code": 200}'
end 